{
  "version": 2,
  "builds": [
    { 
      "src": "backend/server.js", 
      "use": "@vercel/node",
      "config": { "includeFiles": ["backend/**"] }
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "backend/server.js" },
    { "src": "/css/(.*)", "dest": "frontend/css/$1" },
    { "src": "/js/(.*)", "dest": "frontend/js/$1" },
    { "src": "/html/(.*)", "dest": "frontend/html/$1" },
    { "src": "/", "dest": "frontend/html/home.html" },
    { "src": "/(.*)", "dest": "frontend/html/$1" }
  ],
  "functions": {
    "backend/server.js": {
      "maxDuration": 10
    }
  }
}
